<html>
  <head>
  <title><%= full_title yield :title %></title>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": true %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": true %>
    <%= csrf_meta_tags %>
    <%= render "layouts/shim" %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div class="container row" >
      <br><br>
      <% if !current_user.nil? && current_user.admin?%>
      <div class="col-md-3 col-sm-3 sidebar">
          <ul class="nav nav-sidebar">
            <li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li>
<!--             <li><%= link_to Hotel, hotels_index_path %></li> // user thuong -->
            <li><%= link_to Hotel, admin_hotels_path %></li>
           
            <li><%= link_to t(:setting), edit_user_registration_path %></li>
          </ul>
          <% end %>
      </div>


      <% if !current_user.nil? && current_user.admin?%>
        <div class ="form-contain">
       <% end %>
        <div class="col-md-9 col-sm-9 content-detail main">
            <div>
              <% @top_hotels_by_hotels = Hotel.all.sorted_by_hotel_rating.take 4 %>
              
              <% flash.each do |message_type, message| %>
                <div class="infor-request alert alert-<%= message_type %>"><%= message %></div>
              <% end %>
              <%= yield %>
            </div>            
        </div>
          
        <% if !current_user.nil? && !current_user.admin?%>
        <div class="col-md-3 col-sm-3 rate-right">
                <div class ="title-rate"> 
                  Top Hotel for rate
                  <br>
                </div>
                <% unless @top_hotels_by_hotels.empty? %>
                <% @top_hotels_by_hotels.each do |rate_product| %>
                  <div class="item-rate">
                    <%= image_tag rate_product.images.first.picture,  class:"img-responsive img-rate",alt:"Cinque Terre" %>
                    <div>
                      <p class="rate-hotel-name"><%= link_to rate_product.name, hotel_path(rate_product) %></p>
                      <p><%= rating_for rate_product, "hotel", star: 5, disable_after_rate: true %></p>
                    </div>

                  </div><hr>
                  
                  <%end%>
                <% end %>

          </div>
          <% end %>
          <% if !current_user.nil? && current_user.admin?%>
              </div>
         <% end %>
    </div>

    <footer class="footer">
      <div class="row">
        <div class="col-md-4">
           <span style="padding:0px 0px 0px 150px;">Contact:</span><br>
           <h3 style="padding:0px 0px 0px 150px;"> Email:goaban@gmail.com</h3>
        </div>
        <div class="col-md-8">
            <h2>Support</h2>
        </div>
      </div>
    </footer>
  </body>
</html>
