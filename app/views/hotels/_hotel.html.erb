<div class="col-sm-4">
  <div class="well well-sm">
    <%= image_tag hotel.images.first.picture,  class:"img-responsive img-home-content",
    	alt:"Cinque Terre" %>
    <p class="title-hotel"><%= link_to hotel.name, hotel_path(hotel) %></p>
    <p class="row">
	    <span class="col-sm-5">
        Rate<br>
        
	    <%= hotel.average("hotel").nil? ? "0" : hotel.average("hotel").avg.round(1) %>
	    </span>
	    <span class="col-sm-7" style="text-align:left;">
            Price<br>
	    	<%= hotel.price %>
	    </span>
    </p>
    <!-- hien thi duoi dang star -->
    <p class="intro-hotel"><%= hotel.introduction %></p>
    <p></p>
  </div>
</div>
