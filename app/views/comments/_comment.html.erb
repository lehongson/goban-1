<li>
  <%= gravatar_for comment.user, size: 50 %>
  <span><%= comment.user.name %></span>:
  <span class="content"><%= comment.content unless comment.content.empty? %></span>
  <%= gravatar_for(comment.user, size: 50) unless  comment.image.nil? %>
  <span class="timestamp">
    Posted: <%= time_tag comment.created_at %>
    <% if current_user?(comment.user) %>
      <%= link_to "delete", hotel_comment_path(@hotel, comment), method: :delete, remote: true,
        data: { confirm: "You sure?" } %>
  	<% end %>
  </span>
</li>